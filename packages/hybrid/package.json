{
  "name": "@xaui/hybrid",
  "version": "0.0.8",
  "description": "Flutter-inspired React UI components for web and mobile webview with Tailwind CSS styling and CSS animations",
  "keywords": [
    "react",
    "web",
    "webview",
    "hybrid",
    "ui",
    "components",
    "flutter",
    "tailwindcss",
    "xaui"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./alert": {
      "types": "./dist/alert/index.d.ts",
      "import": "./dist/alert/index.js"
    },
    "./dist/index.css": "./dist/index.css"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rygrams/xaui.git",
    "directory": "packages/hybrid"
  },
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@xaui/core": "workspace:*",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^0.3.1"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
